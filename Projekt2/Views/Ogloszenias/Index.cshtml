@model IEnumerable<Projekt2.Models.Ogloszenia>

@{
    ViewBag.Title = "Ogłoszenia";
}

<h2>Ogłoszenia</h2>

<p>
<p><a href="https://localhost:44302/Ogloszenias/Create" class="btn btn-success btn-lg">Dodaj ogłoszenie</a></p>
</p>
<table class="table">
    <tr>
        <th>
            Tytuł
        <th>
            Drużyna
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tytul)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Druzyna.nazwa)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.id_ogloszenia }) |
                @Html.ActionLink("Szczegóły", "Details", new { id = item.id_ogloszenia }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.id_ogloszenia })
            </td>
        </tr>
    }

</table>
